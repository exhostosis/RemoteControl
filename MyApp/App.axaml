<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RemoteControlAvalonia.App">
	<Application.Styles>
		<FluentTheme Mode="Dark"/>
	</Application.Styles>
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="/Assets/Device.theme-dark.ico" ToolTipText="Remote Control">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="{Binding MyDataContext.Uri}" IsEnabled="{Binding MyDataContext.IsListening}" Command="{Binding Open}"/>
						<NativeMenuItem Header="{Binding MyDataContext.Start}" Command="{Binding Start}"/>
                        <NativeMenuItemSeparator/>
                        <NativeMenuItem Header="Autostart" ToggleType="CheckBox" IsChecked="{Binding MyDataContext.Autostart}" Command="{Binding SetAutostart}" CommandParameter="!this.IsChecked"/>
						<NativeMenuItem Header="Exit" Command="{Binding Exit}"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>
