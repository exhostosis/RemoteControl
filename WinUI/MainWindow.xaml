<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:servers="using:Servers"
    xmlns:tb="using:H.NotifyIcon"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="40,15,0,0" Grid.Row="0">Remote Control</TextBlock>
        <local:ServersPage Margin="0, 0, 0, 0" Grid.Row="1"/>
        <local:NotificationPage Grid.Row="2"/>
    </Grid>
</Window>
